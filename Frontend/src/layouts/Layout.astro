---
import { ImportWebP } from '../_Scripts/build-scripts/ImageImporter';
import globalStyles from '../css/global.css?url';

import Navbar from "../components/General/navbar.astro";
import Footer from '../components/General/footer.astro';

import WebpLogo from '../assets/images/misc/BoindyLogo.jpg';
const WPLObject = await ImportWebP(WebpLogo, WebpLogo.width, "max");

const websiteURL = Astro.site?.origin;
const currentRoute = Astro.url.pathname;
const {title, description} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
		<meta name="generator" content={Astro.generator}/>

		<slot name="preload"/>
		<link rel="preload" href="/fonts/raleway.woff2" as="font" type="font/woff2" crossorigin="anonymous"/>
		<link rel="preload" href="/fonts/roboto.woff2" as="font" type="font/woff2" crossorigin="anonymous"/>
		<link rel="preload" href={globalStyles} as="style"/>
		<link rel="stylesheet" href={globalStyles}/>

		<!--------------------->
		<!-- Open Graph Data -->
		<!--------------------->
		<meta property="og:title" content={title}/>
		<meta property="og:site_name" content="Boindy Lawn Care"/>
		<meta property="og:locale" content="en_US"/>
		<meta property="og:description" content={description}/>
		<meta property="og:image" content={WPLObject.src}/>
		<meta property="og:url" content={`${websiteURL}/`}/>
		<meta property="og:type" content="website"/>
		<meta property="og:image:width" content={WPLObject.width}/>
		<meta property="og:image:height" content={WPLObject.height}/>
		<meta property="og:image:alt" content="Boindy Lawn Care Logo"/>
		<meta property="og:image:type" content="image/webp"/>
		<!--------------------->
		<!-- Open Graph Data -->
		<!--------------------->

		<!----------------------->
		<!-- Twitter Card Data -->
		<!----------------------->
		<meta name="twitter:card" content="summary_large_image"/>
		<meta name="twitter:title" content={title}/>
		<meta name="twitter:description" content={description}/>
		<meta name="twitter:image" content={WPLObject.src}/>
		<meta name="twitter:image:width" content={WPLObject.width}/>
		<meta name="twitter:image:height" content={WPLObject.height}/>
		<meta name="twitter:image:alt" content="Windy Pines Web Design Logo"/>
		<meta name="twitter:domain" content="boindylawncare.netlify.app"/>
		<!----------------------->
		<!-- Twitter Card Data -->
		<!----------------------->
		
		<title>{title}</title>
		<meta name="description" content={description}/>
	</head>
	<body>
		<header>
			<Navbar path={currentRoute}/>
		</header>
		<main>
			<slot/>
		</main>
		<footer>
			<Footer/>
		</footer>
	</body>
</html>
